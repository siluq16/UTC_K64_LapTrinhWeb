@model DBCDay07.Models.TblHang

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-4">Chỉnh sửa sản phẩm</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="MaHang" />

            <div class="form-group mb-3">
                <label asp-for="TenHang" class="form-label fw-bold"></label>
                <input asp-for="TenHang" class="form-control" />
                <span asp-validation-for="TenHang" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MaChatLieu" class="form-label fw-bold"></label>
                <select asp-for="MaChatLieu" class="form-select" asp-items="ViewBag.MaChatLieu"></select>
                <span asp-validation-for="MaChatLieu" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SoLuong" class="form-label fw-bold"></label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DonGiaNhap" class="form-label fw-bold"></label>
                <input asp-for="DonGiaNhap" class="form-control" />
                <span asp-validation-for="DonGiaNhap" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DonGiaBan" class="form-label fw-bold"></label>
                <input asp-for="DonGiaBan" class="form-control" />
                <span asp-validation-for="DonGiaBan" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Anh" class="control-label"></label>

                <!-- Hiển thị ảnh hiện tại nếu có -->
                <div class="mb-2" id="oldImageContainer">
                    @if (!string.IsNullOrEmpty(Model.Anh))
                    {
                        <img id="oldImage" src="~/Images/Hang/@Model.Anh" alt="Ảnh hiện tại" style="max-width:150px; max-height:150px;" />
                    }
                </div>

                <!-- Preview ảnh mới -->
                <div class="mb-2" id="newImageContainer" style="display:none;">
                    <img id="previewImage" src="#" alt="Ảnh mới" style="max-width:150px; max-height:150px;" />
                </div>

                <!-- Input upload file -->
                <input type="file" name="AnhFile" class="form-control" accept="image/*" onchange="previewNewImage(this)" />
                <span asp-validation-for="Anh" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="GhiChu" class="form-label fw-bold"></label>
                <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Lưu thay đổi
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function previewNewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    // Ẩn ảnh cũ
                    document.getElementById("oldImageContainer").style.display = "none";

                    // Hiện ảnh mới
                    var preview = document.getElementById("previewImage");
                    preview.src = e.target.result;
                    document.getElementById("newImageContainer").style.display = "block";
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
