@model DBCDay07.Models.TblHang

@{
    ViewData["Title"] = "Create";
}

<h1>Thêm hàng hóa</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="MaHang" class="form-label"></label>
                <input asp-for="MaHang" class="form-control" />
                <span asp-validation-for="MaHang" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TenHang" class="form-label"></label>
                <input asp-for="TenHang" class="form-control" />
                <span asp-validation-for="TenHang" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MaChatLieu" class="form-label"></label>
                <select asp-for="MaChatLieu" class="form-control" asp-items="ViewBag.MaChatLieu"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SoLuong" class="form-label"></label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DonGiaNhap" class="form-label"></label>
                <input asp-for="DonGiaNhap" class="form-control" />
                <span asp-validation-for="DonGiaNhap" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DonGiaBan" class="form-label"></label>
                <input asp-for="DonGiaBan" class="form-control" />
                <span asp-validation-for="DonGiaBan" class="text-danger"></span>
            </div>

            <!-- Upload ảnh -->
            <div class="form-group mb-3">
                <label asp-for="Anh" class="form-label"></label>
                <input type="file" name="AnhFile" class="form-control" accept="image/*" onchange="previewImage(this)" />
                <span asp-validation-for="Anh" class="text-danger"></span>

                <!-- Hiển thị preview -->
                <div class="mt-2">
                    <img id="preview" src="#" alt="Xem trước ảnh" style="max-width: 200px; display:none;" class="img-thumbnail" />
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="GhiChu" class="form-label"></label>
                <input asp-for="GhiChu" class="form-control" />
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function previewImage(input) {
            var output = document.getElementById('preview');
            if (input.files && input.files[0]) {
                output.src = URL.createObjectURL(input.files[0]);
                output.style.display = 'block';
            }
        }
    </script>
}
