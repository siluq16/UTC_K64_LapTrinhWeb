@model hmq_231230880_de01.Models.HmqComputer

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<div class="container mt-5">
    <h2 class="text-center text-danger fw-bold mb-4">
        ⚠️ Xác nhận xóa sản phẩm
    </h2>

    <div class="card border-danger shadow-lg rounded-4 mx-auto" style="max-width: 700px;">
        <div class="row g-0">
            <div class="col-md-5 text-center p-3 d-flex align-items-center justify-content-center">
                @if (!string.IsNullOrEmpty(Model.HmqComImage))
                {
                    <img src="~/images/@Model.HmqComImage"
                         alt="Ảnh sản phẩm"
                         class="img-fluid rounded-3 shadow-sm"
                         style="max-height: 250px; object-fit: contain;" />
                }
                else
                {
                    <div class="text-muted fst-italic">Chưa có ảnh</div>
                }
            </div>

            <div class="col-md-7">
                <div class="card-body">
                    <h4 class="card-title text-dark fw-bold mb-3">@Model.HmqComName</h4>

                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Giá bán:</dt>
                        <dd class="col-sm-8 text-danger fw-semibold">
                            @string.Format("{0:N0} VNĐ", Model.HmqComPrice)
                        </dd>

                        <dt class="col-sm-4 text-muted">Trạng thái:</dt>
                        <dd class="col-sm-8">
                            @if (Model.HmqComStatus == true)
                            {
                                <span class="badge bg-success px-3 py-2">Còn hàng</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary px-3 py-2">Hết hàng</span>
                            }
                        </dd>

                        <dt class="col-sm-4 text-muted">Mã sản phẩm:</dt>
                        <dd class="col-sm-8">@Model.HmqComId</dd>
                    </dl>

                    <div class="alert alert-warning mt-4">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Bạn có chắc muốn xóa sản phẩm này?</strong><br />
                        Hành động này không thể hoàn tác.
                    </div>

                    <form asp-action="Delete" method="post" class="mt-3">
                        <input type="hidden" asp-for="HmqComId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary px-4">
                                <i class="bi bi-arrow-left-circle"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-trash"></i> Xóa sản phẩm
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
