@model IEnumerable<Learner>
<table class="table table-bordered table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(m => m.LastName)</th>
            <th>@Html.DisplayNameFor(m => m.FirstMidName)</th>
            <th>@Html.DisplayNameFor(m => m.EnrollmentDate)</th>
            <th>Major</th>
            <th style="width:180px">Thao tác</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LastName</td>
                <td>@item.FirstMidName</td>
                <td>@item.EnrollmentDate.ToString("yyyy-MM-dd")</td>
                <td>@item.Major?.MajorName</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.LearnerId" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>

                    <a asp-action="Details" asp-route-id="@item.LearnerId" class="btn btn-sm btn-info text-white">
                        <i class="bi bi-info-circle"></i> Details
                    </a>

                    <a asp-action="Delete" asp-route-id="@item.LearnerId" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<ul class="pagination">
    @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
            <a class="page-link"
               data-page="@i"
               data-mid="@ViewBag.mid"
               data-keyword="@ViewBag.keyword">
                @i
            </a>
        </li>
    }
</ul>