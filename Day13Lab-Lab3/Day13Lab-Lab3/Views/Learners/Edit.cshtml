@model Day13Lab_Lab3.Models.Learner

@{
    ViewData["Title"] = "Edit Learner";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">Chỉnh sửa Learner</h4>
                </div>

                <div class="card-body">

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="LearnerId" />

                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label fw-bold"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FirstMidName" class="form-label fw-bold"></label>
                            <input asp-for="FirstMidName" class="form-control" />
                            <span asp-validation-for="FirstMidName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EnrollmentDate" class="form-label fw-bold"></label>
                            <input asp-for="EnrollmentDate" type="date" class="form-control" />
                            <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MajorId" class="form-label fw-bold"></label>
                            <select asp-for="MajorId" class="form-select" asp-items="ViewBag.MajorId">
                                <option value="">-- Chọn ngành --</option>
                            </select>
                            <span asp-validation-for="MajorId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Quay lại
                            </a>

                            <button type="submit" class="btn btn-warning text-dark fw-bold">
                                <i class="bi bi-save"></i> Lưu thay đổi
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
